@if (!User.Identity.IsAuthenticated)
{
    <div class="reg-log">
        <a asp-controller="Account" asp-action="Register" class="btn-reg">Registration</a>
        <a asp-controller="Account" asp-action="LogIn" class="btn-login">Log In</a>
    </div>
    <div class="home-greating">
        <h1>
            We are here to welcome you to our resource.
        </h1>
        <h3>
            To use currency exchange, please register or log in to the system
        </h3>
    </div>
}
else
{
    <div class="reg-log">
        <a asp-controller="Account" asp-action="Logout" class="btn-reg">Log Out</a>
    </div>

    <div class="home-greating">
        <h1>
            Hello, @User.Identity.Name
        </h1>
        <h3>
            Now you can use the functions of our resource
        </h3>
    </div>
}